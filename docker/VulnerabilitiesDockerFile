RUN export PYTHONPATH=$PYTHONPATH:/opt/Seccurate/vulnerabilities/Scanner/common/
RUN export PYTHONPATH=$PYTHONPATH:/opt/Seccurate/vulnerabilities/Scanner/dao/
RUN export PYTHONPATH=$PYTHONPATH:/opt/Seccurate/vulnerabilities/Scanner/data/
RUN export PYTHONPATH=$PYTHONPATH:/opt/Seccurate/vulnerabilities/Scanner/layout/
RUN export PYTHONPATH=$PYTHONPATH:/opt/Seccurate/vulnerabilities/Scanner/logic/
RUN export PYTHONPATH=$PYTHONPATH:/opt/Seccurate/vulnerabilities/Scanner/Test/
RUN export PYTHONPATH=$PYTHONPATH:/opt/Seccurate/vulnerabilities/Scanner/
RUN export PYTHONPATH=$PYTHONPATH:/opt/Seccurate/vulnerabilities/Scanner/layout/boundaries/
RUN export PYTHONPATH=$PYTHONPATH:/opt/Seccurate/vulnerabilities/Scanner/common/exceptions/
